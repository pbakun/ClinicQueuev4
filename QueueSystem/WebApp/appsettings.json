{
  "EmailSettings": {
    "MailServer": "smtp.webio.pl",
    "Port": 587,
    "SenderName": "System kolejkowy",
    "SenderMail": "info@****.pl",
    "Password": "*******",
    "Timeout": 5000
  },
  "ConnectionStrings": {
    "DefaultConnection": "Filename=AppData/AppData.db3;"
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "===> {Timestamp:HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": ".\\logs\\mytestlog-{Date}.txt",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
